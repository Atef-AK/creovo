{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "plugins": [
            {
                "name": "next"
            }
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "preserve",
        "allowJs": true,
        "noEmit": true,
        "incremental": true,
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@lensio/types": [
                "../../packages/types/src"
            ]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}