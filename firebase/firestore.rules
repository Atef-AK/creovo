rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // =========================================================================
    // HELPER FUNCTIONS
    // =========================================================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function hasRole(role) {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    function isValidEmail(email) {
      return email.matches('.*@.*\\..*');
    }
    
    // =========================================================================
    // USERS COLLECTION
    // =========================================================================
    
    match /users/{userId} {
      // Users can read their own document
      allow read: if isOwner(userId);
      
      // Users can create their own document on signup
      allow create: if isOwner(userId) && 
        request.resource.data.keys().hasAll(['email', 'role', 'status']) &&
        request.resource.data.role == 'free';
      
      // Users can update limited fields
      allow update: if isOwner(userId) && 
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'credits', 'lifetime_credits']);
      
      // Only admins can delete users
      allow delete: if isAdmin();
      
      // Admins can read/write any user
      allow read, write: if isAdmin();
    }
    
    // =========================================================================
    // JOBS COLLECTION
    // =========================================================================
    
    match /jobs/{jobId} {
      // Users can read their own jobs
      allow read: if isAuthenticated() && 
        resource.data.user_id == request.auth.uid;
      
      // Users can create jobs (server validates credits)
      allow create: if isAuthenticated() && 
        request.resource.data.user_id == request.auth.uid &&
        request.resource.data.status == 'pending';
      
      // Users can only cancel their pending/queued jobs
      allow update: if isAuthenticated() && 
        resource.data.user_id == request.auth.uid &&
        request.resource.data.status == 'cancelled' &&
        resource.data.status in ['pending', 'queued'];
      
      // Admins can access all jobs
      allow read, write: if isAdmin();
    }
    
    // =========================================================================
    // NICHES COLLECTION (Public Read)
    // =========================================================================
    
    match /niches/{nicheId} {
      // Anyone authenticated can read active niches
      allow read: if isAuthenticated() && resource.data.is_active == true;
      
      // Only admins can write niches
      allow write: if isAdmin();
    }
    
    // =========================================================================
    // SUBSCRIPTIONS COLLECTION
    // =========================================================================
    
    match /subscriptions/{subscriptionId} {
      // Users can read their own subscription
      allow read: if isAuthenticated() && 
        resource.data.user_id == request.auth.uid;
      
      // Only backend/admin can write (via Stripe webhooks)
      allow write: if isAdmin();
    }
    
    // =========================================================================
    // CREDIT TRANSACTIONS COLLECTION
    // =========================================================================
    
    match /credit_transactions/{transactionId} {
      // Users can read their own transactions
      allow read: if isAuthenticated() && 
        resource.data.user_id == request.auth.uid;
      
      // Only backend can write transactions
      allow write: if false; // Server-side only
    }
    
    // =========================================================================
    // DRIVE CONNECTIONS COLLECTION
    // =========================================================================
    
    match /drive_connections/{connectionId} {
      // Users can read/write their own connections
      allow read, write: if isOwner(connectionId);
    }
    
    // =========================================================================
    // SUBSCRIPTION TIERS (Public Read)
    // =========================================================================
    
    match /subscription_tiers/{tierId} {
      allow read: if true; // Public
      allow write: if isAdmin();
    }
    
    // =========================================================================
    // SYSTEM COLLECTIONS (Admin Only)
    // =========================================================================
    
    match /system/{document=**} {
      allow read, write: if isAdmin();
    }
    
    match /logs/{document=**} {
      allow read: if isAdmin();
      allow write: if false; // Server-side only
    }
  }
}
