# Environment
ENVIRONMENT=development
DEBUG=true

# API
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api
ALLOWED_ORIGINS=["http://localhost:3000"]

# Firebase
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CREDENTIALS_PATH=
FIREBASE_EMULATOR_HOST=

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=lensio:

# ====================================
# GOOGLE AI STUDIO (Primary Provider)
# ====================================
# Get your API key from: https://aistudio.google.com/apikey
GOOGLE_AI_API_KEY=
GOOGLE_PROJECT_ID=

# Google AI Models (defaults, can be overridden)
GEMINI_MODEL=gemini-2.5-flash-preview-05-20
IMAGEN_MODEL=imagen-3.0-generate-002
VEO_MODEL=veo-2.0-generate-001
GEMINI_TTS_MODEL=gemini-2.5-flash-preview-tts

# ====================================
# FALLBACK PROVIDERS (Optional)
# ====================================
# OpenAI (fallback for text)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o

# Anthropic (fallback for text)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Replicate/FAL (fallback for images)
REPLICATE_API_KEY=
FAL_API_KEY=

# Runway (fallback for video)
RUNWAY_API_KEY=

# ElevenLabs (fallback for voice)
ELEVENLABS_API_KEY=

# Google Drive Export
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# Stripe
STRIPE_API_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT_RPM=60

# Cost Control
DAILY_BUDGET_USD=1000.0
MAX_JOB_COST_USD=5.0

# Logging
LOG_LEVEL=INFO
LOG_JSON=false
